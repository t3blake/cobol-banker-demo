<Window x:Class="CobolBanker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Woodgrove Bank — Terminal Emulator"
        Icon="app.ico"
        Width="920" Height="720"
        MinWidth="720" MinHeight="500"
        Background="Black"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="Aliased"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        PreviewKeyDown="Window_PreviewKeyDown"
        PreviewMouseDown="Window_PreviewMouseDown">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Terminal output area -->
        <Border Grid.Row="0" BorderBrush="#336633" BorderThickness="1" CornerRadius="2">
            <ScrollViewer x:Name="OutputScroll"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Background="Black"
                          Padding="6">
                <TextBlock x:Name="OutputText"
                           FontFamily="Consolas"
                           FontSize="14"
                           Foreground="#33FF33"
                           Background="Black"
                           TextWrapping="NoWrap"/>
            </ScrollViewer>
        </Border>

        <!-- Input area — styled to look like part of the terminal -->
        <Border Grid.Row="1" BorderBrush="#336633" BorderThickness="1,0,1,1" CornerRadius="0,0,2,2"
                Background="Black" Padding="6,4"
                x:Name="InputPanel" Visibility="Collapsed">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="PromptLabel"
                           FontFamily="Consolas"
                           FontSize="14"
                           Foreground="#33FF33"
                           VerticalAlignment="Center"
                           Text=""/>
                <TextBox x:Name="InputBox"
                         FontFamily="Consolas"
                         FontSize="14"
                         Foreground="#33FF33"
                         Background="Black"
                         CaretBrush="#33FF33"
                         BorderThickness="0"
                         MinWidth="400"
                         VerticalAlignment="Center"
                         PreviewKeyDown="InputBox_PreviewKeyDown"
                         PreviewTextInput="InputBox_PreviewTextInput"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
